#!/bin/sh -e
# Copyright (c) 2014 The crouton Authors. All rights reserved.
# Use of this source code is governed by a BSD-style license that can be
# found in the LICENSE file.

USAGE="${0##*/} next|prev|cros|list|#
Cycles through running graphical chroots.
    next: switch to the next display
    prev: switch to the previous display
    cros: switch directly to Chromium OS
    list: list all of the active displays and the associated chroot name
    #: switch to the nth item in the list, zero-indexed
    :#: switch directly to the chroot owning the specified display number"

# Undocumented:
#   display: return display associated with current window
#            (used from croutonclip):
#     - aura: Chromium OS
#     - 0: Chromium OS X11 display (non-aura window)
#     - 1-9: chroot displays
#   s<num>: informs of a Chromium OS window change (called from extension):
#     - 0: any Chromium OS window
#     - n: criat window: X11 display number

case "$1" in
[Ll]*) cmd='l';;
[Dd]*) cmd='d';;
[Cc]*) cmd='0';;
[Pp]*) cmd='p';;
[Nn]*) cmd='n';;
[Ss]*) cmd='s' disp="${1#s}";;
:*) cmd=":$((${1#:}))";;
[0-9]*) cmd="$(($1))";;
*) echo "$USAGE" 1>&2; exit 2;;
esac

# FIXME: This is our third copy, we need to move it to a common file
PIPEDIR='/tmp/crouton-ext'
PIPEIN="$PIPEDIR/in"
PIPEOUT="$PIPEDIR/out"
PIPELOCK="$PIPEDIR/lock"
CRIATDISPLAY="$PIPEDIR/criat-display"
CROUTONCLIPPIDFILE='/tmp/crouton-lock/clip'

# Write a command to croutonwebsocket, and read back response
websocketcommand() {
    # Check that $PIPEDIR and the FIFO pipes exist
    if ! [ -d "$PIPEDIR" -a -p "$PIPEIN" -a -p "$PIPEOUT" ]; then
        echo "EError $PIPEIN or $PIPEOUT are not pipes."
        exit 0
    fi

    if ! timeout 3 \
           sh -c "flock 5; cat > '$PIPEIN'; cat '$PIPEOUT'" 5>"$PIPELOCK"; then
        echo "EError timeout"
    fi
}

# Returns the chroot name of an X11 display specified in $1 on stdout
getname() {
    local name=''
    name="`DISPLAY=":${1#:}" xprop -root CROUTON_NAME 2>/dev/null`"
    if [ "${name%\"}" != "$name" ]; then
        name="${name%\"}"
        echo "${name#*\"}"
    else
        echo "Unknown"
    fi
}

# Only let one instance run at a time to avoid nasty race conditions
mkdir -m 775 -p /tmp/crouton-lock
exec 3>/tmp/crouton-lock/cycle
flock 3

# set display command from extension
if [ "$cmd" = 's' ]; then
    echo "$disp" > "$CRIATDISPLAY"
    if [ -s "$CROUTONCLIPPIDFILE" ]; then
        kill -USR1 "`cat "$CROUTONCLIPPIDFILE"`" || true
    fi
    exit 0
fi

# Ensure environment sanity
export XAUTHORITY=''

# Set to y if there is any xiat instance running
xiatactive=''

# Prepare display list for easier looping
displist=''
for disp in /tmp/.X*-lock; do
    disp="${disp#*X}"
    disp=":${disp%-lock}"
    # Only add VT-based and xiat-based chroots here (that excludes Xephyr)
    if [ "$disp" = ':0' ]; then
        continue
    elif DISPLAY="$disp" xprop -root 'XFree86_VT' 2>/dev/null \
            | grep -q 'INTEGER'; then
        displist="$displist $disp"
    elif DISPLAY="$disp" xprop -root 'CROUTON_XMETHOD' 2>/dev/null \
            | grep -q '= "xiat"$'; then
        displist="$displist $disp"
        xiatactive='y'
    fi
done
# List windows on :0. Includes aura
winlist="`host-x11 croutonwmtools list nim | sort | awk '{ printf $NF " " }'`"
aurawin="`host-x11 croutonwmtools list ni | \
              awk '$1 == "aura_root_0" { print $NF; exit }'`"

# Combine the two
fulllist="$winlist$displist"
fulllist="${fulllist% }"

# Figure out the current display number
tty="`cat '/sys/class/tty/tty0/active'`"
if [ "$tty" = 'tty1' ]; then
    # Either in Chromium OS, xephyr chroot, or window. Active window is starred.
    for disp in $winlist; do
        if [ "${disp%"*"}" != "$disp" ]; then
            curdisp="$disp"
            if [ -n "$xiatactive" -a "${disp%"*"}" = "$aurawin" -a \
                    -s "$CRIATDISPLAY" ]; then
                criatdisp="`cat $CRIATDISPLAY`"
                if [ "$criatdisp" -ge 0 ]; then
                    curdisp=":$criatdisp"
                fi
            fi
            break
        fi
    done
else
    # Poll the displays to figure out which one owns this VT
    curdisp="$tty"
    for disp in $displist; do
        if DISPLAY="$disp" xprop -root 'XFree86_VT' 2>/dev/null \
                | grep -q " ${tty#tty}\$"; then
            curdisp="$disp"
            break
        fi
    done
fi

# List the displays if requested
if [ "$cmd" = 'l' -o "$cmd" = 'd' ]; then
    chromiumos='Unknown'
    if [ -r '/var/host/lsb-release' ]; then
        chromiumos="`awk -F= '/_RELEASE_NAME=/{print $2}' \
                             '/var/host/lsb-release'`"
    fi
    host-x11 croutonwmtools list nim | sort | while read -r line; do
        disp="${line##* }"
        line="${line% *}"
        number='0'
        active=' '
        if [ "${line#Xephyr}" != "$line" ]; then
            number="${line#*:}"
            number="${number%%.*}"
            if [ "${number#[0-9]}" = "$number" ]; then
                number='0'
            else
                line="`getname "$number"`"
            fi
        fi
        if [ "$disp" = "$curdisp" ]; then
            active='*'
            if [ "$cmd" = 'd' ]; then
                if [ "$line" = 'aura_root_0' ]; then
                    echo 'aura'
                else
                    echo ":$number"
                fi
                # exit would only break the loop anyway...
                break
            fi
        fi
        if [ "$line" = 'aura_root_0' ]; then
            line="$chromiumos"
        fi
        if [ "$cmd" = 'l' ]; then
            echo "$number$active $line"
        fi
    done
    for disp in $displist; do
        number="${disp#:}"
        active=' '
        if [ "$disp" = "$curdisp" ]; then
            active='*'
            if [ "$cmd" = 'd' ]; then
                echo "$disp"
                exit 0
            fi
        fi

        if [ "$cmd" = 'l' ]; then
            echo -n "$number$active "
            getname "$disp"
        fi
    done
    exit 0
fi

# Determine the target display
if [ -n "${cmd#[pn]}" ]; then
    if [ "${cmd#:}" != "$cmd" ]; then
        destdisp="$cmd"
    else
        i=0
        destdisp=''
        for disp in $fulllist; do
            if [ "$i" -eq "$cmd" ]; then
                destdisp="$disp"
                break
            fi
            i="$((i+1))"
        done
        if [ -z "$destdisp" ]; then
            echo "Display number out of range." 1>&2
            exit 2
        fi
    fi
elif [ "$cmd" = 'p' ]; then
    destdisp="${fulllist##* }"
    for disp in $fulllist; do
        if [ "$disp" = "$curdisp" ]; then
            break
        fi
        destdisp="$disp"
    done
elif [ "$cmd" = 'n' ]; then
    destdisp=''
    for disp in $fulllist; do
        if [ -n "$destdisp" ]; then
            destdisp="$disp"
            break
        elif [ "$disp" = "$curdisp" ]; then
            destdisp="${fulllist%% *}"
        fi
    done
    if [ -z "$destdisp" ]; then
        destdisp="${fulllist%% *}"
    fi
else
    echo "Bad command $cmd." 1>&2
    exit 3
fi

# No-op on no-op
if [ "$destdisp" = "$curdisp" ]; then
    exit 0
fi

# Make sure tap-to-click is enabled
if hash xinput 2>/dev/null; then
    for id in `host-x11 xinput --list --id-only`; do
        host-x11 xinput set-prop "$id" 'Tap Paused' 0 2>/dev/null || true
    done
fi

# Determine if the target display is on a VT
if [ "${destdisp#:}" = "$destdisp" ]; then
    eval "`host-x11`"
    # Raise the right window after chvting, so that it can update
    if [ "$tty" != 'tty1' ]; then
        chvt 1
        sleep .1
    fi
    croutonwmtools raise "${destdisp%"*"}"

    if [ -n "$xiatactive" -a "${destdisp%"*"}" = "$aurawin" ]; then
        STATUS="`echo "X-1" | websocketcommand`"
        if [ "$STATUS" != 'XOK' ]; then
            echo "${STATUS#?}" 1>&2
            exit 1
        fi
    fi
else
    export DISPLAY="$destdisp"
    if xprop -root 'CROUTON_XMETHOD' 2>/dev/null | grep -q '= "xiat"$'; then
        if [ "$tty" != 'tty1' ]; then
            chvt 1
            sleep .1
        fi
        STATUS="`echo "X${destdisp#:}" | websocketcommand`"
        if [ "$STATUS" != 'XOK' ]; then
            echo "${STATUS#?}" 1>&2
            exit 1
        fi
    else
        dest="`xprop -root 'XFree86_VT' 2>/dev/null`"
        dest="${dest##* }"
        if [ "${dest#[1-9]}" = "$dest" ]; then
            dest='1'
        fi
        chvt "$dest"
    fi
fi

if [ -s "$CROUTONCLIPPIDFILE" ]; then
    kill -USR1 "`cat "$CROUTONCLIPPIDFILE"`" || true
fi

# Wait a flip and then refresh the display for good measure
if hash xrefresh 2>/dev/null; then
    sleep .1
    xrefresh
fi
exit 0
